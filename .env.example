# Laravel Production Environment Example
# Copy to .env and fill in secure values.

# --- App ---
APP_NAME="My App"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# If behind a load balancer/proxy (e.g., Cloudflare, ELB), set trusted proxies appropriately.
# TRUSTED_PROXIES=*

# --- Logging ---
LOG_CHANNEL=stack
LOG_LEVEL=warning

# --- Database (use a managed DB on your host) ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password
# For PostgreSQL, switch connection and uncomment below
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=your_database
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# --- Cache / Session / Queue ---
# Recommended: Redis in production. Provision Redis and set the following.
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
# If not using Redis, switch to database drivers and configure DB tables accordingly.
# CACHE_DRIVER=database
# SESSION_DRIVER=database
# QUEUE_CONNECTION=database

# Redis configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session settings
SESSION_LIFETIME=120
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true

# --- Mail ---
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# --- Filesystems ---
FILESYSTEM_DISK=public
# To use S3 in production:
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false
# AWS_URL=
# ASSET_URL=https://cdn.your-domain.com

# --- Broadcasting & Realtime ---
# Use Pusher for production or configure Laravel WebSockets separately.
BROADCAST_DRIVER=pusher

# Pusher configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
# If using a custom host (e.g., self-hosted websockets)
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# BeyondCode Laravel WebSockets (if self-hosting websockets)
# LARAVEL_WEBSOCKETS_SSL_LOCAL_CERT=
# LARAVEL_WEBSOCKETS_SSL_LOCAL_PK=
# LARAVEL_WEBSOCKETS_SSL_PASSPHRASE=

# --- Sanctum / SPA settings (if applicable) ---
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com
# For cookie domain across subdomains
# SESSION_DOMAIN=.your-domain.com

# --- Queue / Scheduler ---
# Ensure a queue worker and scheduler are configured in your hosting platform.
# Example: run "php artisan queue:work" and schedule "php artisan schedule:run" every minute.

# --- Newsletter / Mailchimp (spatie/laravel-newsletter) ---
MAILCHIMP_APIKEY=
MAILCHIMP_LIST_ID=

# --- Payments ---
# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# PayPal (Omnipay)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_TEST_MODE=false

# Mollie
MOLLIE_KEY=

# MercadoPago
MP_PUBLIC_KEY=
MP_ACCESS_TOKEN=

# --- OpenAI (openai-php/laravel) ---
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# --- Vite / Frontend ---
VITE_APP_NAME="${APP_NAME}"
# If using Pusher via Laravel Echo in the frontend
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# --- CORS ---
# Configure CORS as needed in config/cors.php. You can also set allowed origins via hosting platform.

# --- Misc ---
# Set these only if you use them in your config/*.php via env().
# APP_LOCALE=en
# FAKER_LOCALE=en_US
